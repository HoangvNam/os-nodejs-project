<!-- Giao diện để Admin quản lí các phòng -->
<%- include("./layout/admin/header") %>

  <section class="bg-light py-3 ">
    <div class="container ">
      <div class="card shadow border-0">
        <div class="card-body">
          <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-3">
            <form class="d-flex w-50 mb-3 mb-md-0" method="GET" action="/admin/users">
              <div class="input-group">
                <input type="text" class="form-control" name="search" value="<%= searchQuery %>" placeholder="Search by Username " aria-label="Search">
                <button class="btn btn-primary" type="submit">Search</button>
              </div>
            </form>
            <div class="d-flex">
              <a href="/admin/add-user" class="btn btn-primary me-2">Add User</a>
            </div>
          </div>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead class="table-light">
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">Username</th>
                  <th scope="col">password</th>
             

                  <th scope="col">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if (users.length> 0) {
                  for (var i = 0; i < users.length; i++) { %> <!-- Fixed 'int' to 'var' and 'leghth' to 'length' -->
                    <tr>
                      <td>
                        <%= users[i]._id %>
                      </td>
                      <td>
                        <%= users[i].username %> 
                      </td>
                      <td>
                        <%= users[i].password %>
                      </td>
                      
                      <td>
                        <div class="dropdown">
                          <span class="text-secondary" id="productActions" data-bs-toggle="dropdown"
                            aria-expanded="false">actions</span>
                          <ul class="dropdown-menu" aria-labelledby="productActions">
                        
                              <li><a class="dropdown-item" href="/admin/edit-user/<%= users[i]._id %>">Edit</a></li>
                         
                            <form action="/admin/delete-user/<%= users[i]._id  %>" method="POST">
                              <li><button class="dropdown-item" >Delete</button></li>
                            </form>
                          </ul>
                        </div>
                      </td>
                    </tr>
                    <% } } else { %>
                      <tr>
                        <td>update...</td>
                        <td>update...</td>
                        <td>update...</td>
                        <td>update...</td>
                        <td>
                          <div class="dropdown">
                            <span class="text-secondary" id="productActions" data-bs-toggle="dropdown"
                              aria-expanded="false">actions</span>
                            <ul class="dropdown-menu" aria-labelledby="productActions">
                              <li><a class="dropdown-item" href="#">update...</a></li>
                              <li><a class="dropdown-item" href="#">update...</a></li>
                            </ul>
                          </div>
                        </td>
                      </tr>
                      <% } %>
              </tbody>
            </table>
          </div>
          <nav aria-label="Pagination" class="d-flex justify-content-between align-items-center">
            <span>Showing <%= (currentPage - 1) * 10 + 1 %> to <%= currentPage * 10 %> of <%= totalUsers %> rooms</span>
            <ul class="pagination mb-0">
                <!-- Previous Page Link -->
                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= currentPage - 1 %>" tabindex="-1" aria-disabled="true">Previous</a>
                </li>
        
                <!-- Page Number Links -->
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                    </li>
                <% } %>
        
                <!-- Next Page Link -->
                <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                </li>
            </ul>
        </nav>
        
        </div>
      </div>
    </div>
  </section>



  <%- include("./layout/admin/footer") %>