<style>
    .room-card {
        margin-bottom: 20px;
        border: 1px solid #ddd;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .room-card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }
    .room-card .room-info {
        padding: 15px;
    }
    .room-card .room-info h5 {
        font-size: 18px;
        font-weight: bold;
    }
    .room-card .room-info p {
        margin: 0;
        font-size: 14px;
        color: #666;
    }
    .room-card .room-info .price {
        font-size: 16px;
        color: #28a745;
        font-weight: bold;
    }
</style>

<!-- Include header here -->
<%- include('./layout/admin/header') %>

<div class="container mt-5">
    <h1 class="text-center mb-4">Room Information</h1>
    <div class="d-flex flex-column align-items-center justify-content-center">
       
        <div class="col-md-4">
            <div class="room-card">
                <!-- Image -->
                <img src="/images/<%= rooms.image.split('\\').pop() %>" alt="Room Image" class="img-fluid">
                <!-- Room Info -->
                <div class="room-info">
                    <h5>Room Number: <%= rooms.roomNumber %></h5>
                    <p>Beds: <%= rooms.bedCount %></p>
                    <p>Status: <span class="badge bg-<%= rooms.status === 'available' ? 'success' : rooms.status === 'occupied' ? 'danger' : 'warning' %>">
                        <%= rooms.status.charAt(0).toUpperCase() + rooms.status.slice(1) %>
                    </span></p>
                    <p class="price">Price: $<%= rooms.price %></p>
                </div>
            </div>
        </div>
       
    </div>
</div>

<!-- Include footer here -->
<%- include('./layout/admin/footer') %>